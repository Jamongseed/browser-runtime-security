{
  "manifest_version": 3,
  "name": "Browser-Runtime-Security v0",
  "version": "0.1.0",
  "description": "Real-time client-side threat detection and runtime behavior monitoring system.",
  "permissions": [
    "storage",   
    "tabs" 
  ],
  "host_permissions": [
    "<all_urls>" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Security Status"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["page_hook_sw_boot.js"],
      "run_at": "document_start",
      "world": "MAIN",
      "all_frames": true
    },
    {
      "matches": ["<all_urls>"],
      "js": [
        "engine/rule_engine.js",
        "engine/reporter.js",
        "detectors/forms.js",
        "detectors/dom_mutation.js",
        "detectors/invisible_layer.js",
        "detectors/postmessage.js",
        "detectors/form_submit_prototype_tamper.js",
        "detectors/sw_persistence.js",
        "content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "page_hook.js",
        "rulesets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}