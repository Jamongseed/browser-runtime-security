{
  "manifest_version": 3,
  "name": "Browser-Runtime-Security v0",
  "version": "0.1.0",
  "description": "Real-time client-side threat detection and runtime behavior monitoring system.",
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Security Status"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:3000/*",
        "http://127.0.0.1:3000/*"
      ],
      "js": [
        "page_hook_sw_boot.js",
        "page_hook.js"
      ],
      "run_at": "document_start",
      "world": "MAIN",
      "all_frames": true
    },
    {
      "matches": [
        "http://localhost:3000/*",
        "http://127.0.0.1:3000/*"
      ],
      "js": [
        "engine/rule_engine.js",
        "engine/reporter.js",
        "detectors/forms.js",
        "detectors/dom_mutation.js",
        "detectors/invisible_layer.js",
        "detectors/postmessage.js",
        "detectors/form_submit_prototype_tamper.js",
        "detectors/sw_persistence.js",
        "detectors/mutation_observer.js",
        "detectors/link_href_swap.js",
        "debug_dump_injected.js",
        "content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "rulesets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}