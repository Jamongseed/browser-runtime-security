{
  "manifest_version": 3,
  "name": "Browser-Runtime-Security (prototype)",
  "version": "0.1.0",
  "description": "Browser Runtime Security",
  "permissions": [
    "storage",   
    "tabs" 
  ],
  "host_permissions": [
    "<all_urls>" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Security Status"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["page_hook.js"],
      "matches": ["<all_urls>"]
    }
  ]
}